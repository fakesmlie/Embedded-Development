void Key_1(void)
{
 //   PORTB&=~BIT(2);
    if((PINB&(1<<PB0)))//检验PC0的电平状态是否为低电平
    {
	     PORTB&=~BIT(2);
	     delay_ms(20);//延时消抖
         if(!(PINB&(1<<PB0)))
         {
		   PORTB&=~BIT(2);   
         }
    }
    while(!(PINB&(1<<PB0)));//判断按键是否松开
}



