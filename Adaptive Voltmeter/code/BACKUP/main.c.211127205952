#include"iom16v.h"
#include"macros.h"


#define Get_Bit(val, bitn) (val &(1<<(bitn)) )   



//延时函数
void delay_ms(unsigned int a)	    
{
    unsigned int j;
    while(--a!=0)
    {
	     for(j=0;j<120;j++);
    }
}



