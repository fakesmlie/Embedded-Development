//延时函数
void delay_ms(unsigned int a)	    
{
    unsigned int j;
    while(--a!=0)
    {
	     for(j=0;j<120;j++);
    }
}



/*** LED初始化函数 ***/
/******************************************************************************/
void LED_Init(void)
{ 
 	DDRB|=BIT(2);    //PB2端口皆设置为输出端口
	DDRB|=BIT(3);    //PB2端口皆设置为输出端口
	DDRB|=BIT(4);    //PB2端口皆设置为输出端口
/*
    PORTB&=~BIT(2);   //电亮LED灯代码 LED1 LED2 LED3
	PORTB&=~BIT(3);   
	PORTB&=~BIT(4);   
*/
}


/*** 按键初始化函数 ***/
/******************************************************************************/
void Key_Init(void)
{
    DDRB|=BIT(0);     //PC高四位设为输出端口，低四位设为输入端口
    PORTC=0xFF;    //PC0-PC3上拉电阻使能
}



