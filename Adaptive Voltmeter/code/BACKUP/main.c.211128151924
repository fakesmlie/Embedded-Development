#include"iom16v.h"
#include"macros.h"
#include"led.h"

//延时函数
void delay_ms(unsigned int a)	    
{
    unsigned int j;
    while(--a!=0)
    {
	     for(j=0;j<120;j++);
    }
}


/*** 按键初始化函数 ***/
/******************************************************************************/
void Key_Init(void)
{

    DDRB=0x1c;   //k1 k2 配置为输入   0001 1100
    PORTB=0x1f;   //使能上拉电阻   0001 1111  
}


void Key_1(void)
{
 //   PORTB&=~BIT(2);
    if((PINB&(1<<PB1))==0)//检验PB0的电平状态是否为低电平
    {
	     delay_ms(20);//延时消抖
         if((PINB&(1<<PB1))==0)
         {
		   PORTB&=~BIT(2);   
         }
    }
    while((PINB&(1<<PB1))==0);//判断按键是否松开
}



void main(void)
{
 LED_Init();
 Key_Init();
while(1)
{
 Key_1();
}
}